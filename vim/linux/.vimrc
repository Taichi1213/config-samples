colors desert

set nocompatible

set list
set listchars=trail:·,tab:»\ ,eol:¶
set number
set cursorline
set spell
set laststatus=2
set statusline=%t\ %y%=Ln:%l/%L\ Col:%c\ [%{&ff},\ %{&fenc}]\ %P

" tabs and indenting
set tabstop=4
set shiftwidth=4
set smarttab
set softtabstop=4
set expandtab
set autoindent
set smartindent

" search
set hlsearch
set incsearch
set ignorecase
set smartcase
